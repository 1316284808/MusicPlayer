<Page x:Class="MusicPlayer.Page.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicPlayer.Page"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:MusicPlayer.Controls" 
      xmlns:Helper="clr-namespace:MusicPlayer.Helper"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="SettingsPage">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <TextBlock Grid.Row="0" Text="设置" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Margin="10"   />

        <!-- 内容区域 -->
        <TabControl Grid.Row="1" VerticalContentAlignment="Top"  Margin="10">

            <TabItem Background="Transparent"   >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="Settings" Margin="2" />
                        <TextBlock Text="窗体设置" FontSize="14"    FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Disabled" Padding="20">
                    <controls:WindowSettingsControl x:Name="WindowSettingsControl"   />
                </ScrollViewer>
            </TabItem>
            <TabItem Background="Transparent">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="List" Margin="2" />
                        <TextBlock Text="列表设置" FontSize="14"    FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Disabled" Padding="20">
                    <controls:PlaylistSettingControl x:Name="PlaylistSettingControl"    />
                </ScrollViewer>
            </TabItem>

            <TabItem   Background="Transparent"   >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="Sound" Margin="2" />
                        <TextBlock Text="音频设置" FontSize="14"    FontWeight="Bold"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Disabled" Padding="20">
                    <controls:SoundSettingsControl DataContext="{Binding SoundSettingsViewModel}" />
                </ScrollViewer>
            </TabItem>

        </TabControl>
        <StackPanel  Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center"  >
            <!--<Button Content="应用设置" 
                Command="{Binding ApplySettingsCommand}"
                HorizontalAlignment="Center"
                Width="120" Height="40"
                Background="#33FFFFFF"   />-->
        </StackPanel>

    </Grid>
</Page>