<Window  x:Class="MusicPlayer.LyricsWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        xmlns:converters="clr-namespace:MusicPlayer.Converters"
        xmlns:config="clr-namespace:MusicPlayer.Config"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:controls="clr-namespace:MusicPlayer.Helper" 
        Background="Transparent"
        Title="桌面歌词"
        Width="600"
        SizeToContent="Height"
          WindowStartupLocation="CenterScreen"
         Opacity="0.8"
      WindowStyle="None"
      AllowsTransparency="True"
      Topmost="True"
      ShowInTaskbar="False"
      controls:WindowDragBehavior.EnableDrag="True"
    
        mc:Ignorable="d">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <!-- 逐字高亮转换器 -->
        <converters:HighlightConverter x:Key="HighlightConverter"/>
        <converters:InverseHighlightConverter x:Key="InverseHighlightConverter"/>
    </Window.Resources>
    <!--防止鼠标事件穿透图层，给与一个半透明底色-->
    <Border x:Name="MainBorder"   CornerRadius="4"
            controls:LyricWindowHoverBehavior.EnableHoverEffect="True"
            controls:LyricWindowHoverBehavior.IsHovered="{Binding IsMouseOver}">
    <Grid Grid.Row="1"  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!-- 歌词显示区域 - 逐字高亮 -->
        <TextBlock Grid.Column="0" x:Name="LyricsText" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"
               FontSize="28"  
               Height="auto" 
               TextWrapping="Wrap" 
               FontWeight="SemiBold"
               TextAlignment="Center"
               Margin="5">
            <TextBlock.Inlines>
                <!-- 高亮部分 -->
                <Run x:Name="HighlightedRun" 
                     Foreground="#FF0078D7"  >
                    <Run.Text>
                        <MultiBinding Converter="{StaticResource HighlightConverter}">
                            <Binding Path="CurrentLyricLine.Text" FallbackValue="暂无歌词"/>
                            <Binding Path="CurrentLyricLine.CurrentHighlightedIndex" FallbackValue="0"/>
                        </MultiBinding>
                    </Run.Text>
                </Run><!-- 未高亮部分 --><Run x:Name="UnhighlightedRun" 
                     Foreground="Black">
                    <Run.Text>
                        <MultiBinding Converter="{StaticResource InverseHighlightConverter}">
                            <Binding Path="CurrentLyricLine.Text" FallbackValue="暂无歌词"/>
                            <Binding Path="CurrentLyricLine.CurrentHighlightedIndex" FallbackValue="0"/>
                        </MultiBinding>
                    </Run.Text>
                </Run>
            </TextBlock.Inlines>
        </TextBlock>

        <!-- 关闭按钮 -->
        <ui:Button Grid.Column="1" x:Name="CloseButton" Background="Transparent" BorderThickness="0" 
               Command="{Binding CloseWindowCommand}" ToolTip="关闭桌面歌词" Margin="2.0"
                   Visibility="{Binding IsMouseOver, Converter={StaticResource BoolToVisibilityConverter}}" >
                <ui:Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="35" />
                        <Setter Property="Width" Value="40"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"  CornerRadius="4" >
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="Red"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ui:Button.Style>
                <controls:CustomIcon Kind="Close" IconSize="10"/>
        </ui:Button>
    </Grid>
    </Border>
</Window >