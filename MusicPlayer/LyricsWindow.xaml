<Window  x:Class="MusicPlayer.LyricsWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        xmlns:converters="clr-namespace:MusicPlayer.Converters"
        xmlns:config="clr-namespace:MusicPlayer.Config"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:controls="clr-namespace:MusicPlayer.Helper" 
        Background="#01000000"
         MinHeight="60"  
         MinWidth="600"
        Title="桌面歌词"  
        SizeToContent="WidthAndHeight"
          WindowStartupLocation="CenterScreen"
         Opacity="0.8"
      WindowStyle="None"
      AllowsTransparency="True"
      Topmost="True"
      ShowInTaskbar="False"
      controls:WindowDragBehavior.EnableDrag="True"
    
        mc:Ignorable="d">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <!-- 歌词进度转换器 -->
        <converters:LyricProgressConverter x:Key="LyricProgressConverter"/>
    </Window.Resources>
    <!--防止鼠标事件穿透图层，给与一个半透明底色-->
    <Border x:Name="MainBorder" Background="#e6e6e6"  CornerRadius="8" 
            controls:LyricWindowHoverBehavior.EnableHoverEffect="True"
            controls:LyricWindowHoverBehavior.IsHovered="{Binding IsMouseOver}">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="Black" Opacity="0.2"/>
        </Border.Effect>
        <Grid Grid.Row="1"   >
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
            <ui:Button Grid.Column="0" x:Name="lockButton" Background="Transparent" BorderThickness="0" 
        ToolTip="锁定图层" Margin="2.0"
            Visibility="{Binding IsMouseOver, Converter={StaticResource BoolToVisibilityConverter}}" >
                <ui:Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="35" />
                        <Setter Property="Width" Value="40"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"  CornerRadius="4" >
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FF0078D7"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ui:Button.Style>
                <controls:CustomIcon Kind="Lyrics"  />
            </ui:Button>

            <Border Grid.Column="1" Padding="5">
              
                <StackPanel HorizontalAlignment="Center">
                    <!--歌词行显示区域-->
                    <Grid  VerticalAlignment="Center"  Margin="0"    >
                        <!-- 下层：纯黑保底层 - 所有单个字符的TextBlock，自动换行，永远显示 -->
                        <StackPanel Orientation="Horizontal"  Height="auto"  x:Name="wpBottom"    HorizontalAlignment="Center" VerticalAlignment="Top"  Margin="0" />
                        <!-- 上层：纯蓝进度层 - 所有单个字符的TextBlock，自动换行，进度驱动填充 -->
                        <StackPanel  Orientation="Horizontal" Height="auto" x:Name="wpTop"    HorizontalAlignment="Center"  VerticalAlignment="Top"  Margin="0" />
                    </Grid>
                    <!--备用歌词行，用于显示歌词翻译-->
                    <Grid  HorizontalAlignment="Center"  VerticalAlignment="Center"  Margin="0"  >
                        <!-- 下层：纯黑保底层 - 所有单个字符的TextBlock，自动换行，永远显示 -->
                        <StackPanel  Orientation="Horizontal"   Height="auto"  x:Name="wpBottoms"   HorizontalAlignment="Center"  VerticalAlignment="Top"  Margin="0" />
                        <!-- 上层：纯蓝进度层 - 所有单个字符的TextBlock，自动换行，进度驱动填充 -->
                        <StackPanel  Orientation="Horizontal"   Height="auto" x:Name="wpTops"   HorizontalAlignment="Center"  VerticalAlignment="Top"  Margin="0" />
                    </Grid>

                </StackPanel>
              
    </Border>

    <!-- 关闭按钮 -->
        <ui:Button Grid.Column="2" x:Name="CloseButton" Background="Transparent" BorderThickness="0" 
               Command="{Binding CloseWindowCommand}" ToolTip="关闭桌面歌词" Margin="2.0"
                   Visibility="{Binding IsMouseOver, Converter={StaticResource BoolToVisibilityConverter}}" >
                <ui:Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="35" />
                        <Setter Property="Width" Value="40"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"  CornerRadius="4" >
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="Red"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ui:Button.Style>
                <controls:CustomIcon Kind="Close" IconSize="10"/>
        </ui:Button>
    </Grid>
    </Border>
</Window >