<UserControl x:Class="MusicPlayer.Controls.PlaylistSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:MusicPlayer.Controls"
             xmlns:Helper="clr-namespace:MusicPlayer.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>

            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">


            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- 左侧：设置项描述 -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="Photo"  Margin="2"/>
                        <TextBlock Text=" 封面缓存"  FontSize="14" FontWeight="SemiBold"   />
                    </StackPanel>

                    <TextBlock Text="封面缓存将显著提高歌曲封面的加载速度，禁用可能导致加载变慢"  FontWeight="Normal" FontSize="12"  Margin="10,5,0,0"/>
                </StackPanel>
                <ui:Button Padding="0" ToolTip="打开缓存目录" Grid.Column="1" 
           Width="50" 
           Margin="5,0,5,0"     >
                    <Helper:CustomIcon HorizontalAlignment="Left" Margin="5,2" Kind="List"  />
                </ui:Button>
                <ui:ToggleSwitch x:Name="SpectrumToggleSwitch" 
             Grid.Column="2"    Background="Black"
             HorizontalAlignment="Center" VerticalAlignment="Center" 
             Content="启用"/>
            </Grid>
            <Separator  Margin="10" />
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- 左侧：设置项描述 -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="Stop"  Margin="2"/>
                        <TextBlock Text="歌词文件目录"  FontSize="14" FontWeight="SemiBold"   />
                    </StackPanel>

                    <TextBlock Text="歌曲若无内嵌歌词，则默认检索歌曲同目录的同名歌词文件。同时支持检索指定目录:[ ] "  FontWeight="Normal" FontSize="12"  Margin="10,5,0,0"/>
                </StackPanel>
                <ui:Button Padding="0" ToolTip="选择目录" Grid.Column="1" 
                           Width="50" 
                           Margin="5,0,5,0"     > 
                        <Helper:CustomIcon HorizontalAlignment="Left" Margin="5,2" Kind="List"  /> 
                </ui:Button>
            </Grid>
            <Separator  Margin="10" />
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：设置项描述 -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="ClearList"  Margin="2"/>
                        <TextBlock Text="清空播放列表"  FontSize="14" FontWeight="SemiBold"   />
                    </StackPanel>
                   
                    <TextBlock Text="将删除播放列表中的所有歌曲，但不会影响电脑本地文件"  FontWeight="Normal" FontSize="12"  Margin="10,5,0,0"/>
                </StackPanel> 

                <ui:Button Grid.Column="1" 
                           Width="50" 
                           Margin="5,0,5,0"   
                           ToolTip="清空播放列表" 
                           Cursor="Hand"
                           Command="{Binding ClearPlaylistCommand}"> 
                    <Helper:CustomIcon Kind="Delete" Foreground="red" />
                </ui:Button> 
            </Grid>
           
           


        </StackPanel>

    </Grid>
</UserControl>
