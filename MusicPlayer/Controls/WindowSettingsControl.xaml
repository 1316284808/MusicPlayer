<UserControl x:Class="MusicPlayer.Controls.WindowSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
              xmlns:Helper="clr-namespace:MusicPlayer.Helper"
             mc:Ignorable="d" >

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

           <StackPanel Orientation="Vertical">
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左侧：设置项描述 -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="Theme" Margin="2"/>
                        <Separator Margin="2" />
                        <TextBlock Text="主题切换"   FontSize="14"  FontWeight="SemiBold"   />
                        <Separator Margin="2" />
                    </StackPanel>

                    <TextBlock Text="可以切换四种不同的主题：None、Acrylic、Mica、Mica Alt  " FontSize="12"   FontWeight="Normal"  Margin="20,5,0,0"/>
                    </StackPanel>

                    <!-- 右侧：开关控件 -->
                    <ComboBox   FontWeight="Normal" Grid.Column="1" Width="AUTO"  MinWidth="120" Height="40"  HorizontalAlignment="Center" VerticalAlignment="Center" 
                                ItemsSource="{Binding ThemeOptions}"  
                                SelectedItem="{Binding CurrentTheme, Mode=TwoWay}"/> 
                </Grid>

            <Separator  Margin="10" />
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：设置项描述 -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="Spectrum" Margin="2"/>
                        <Separator Margin="2" />
                        <TextBlock Text="频谱显示"   FontSize="14"  FontWeight="SemiBold"   />
                        <Separator Margin="2" />
                        <Border Background="Pink" CornerRadius="4" Margin="10,0" Padding="2" Opacity="0.7" >
                            <TextBlock Text="⚠GPU高占用"  HorizontalAlignment="Left" VerticalAlignment="Center" FontStretch="Normal" FontSize="10" FontWeight="SemiBold"   Foreground="Red"  />
                        </Border>
                    </StackPanel>
                   
                    <TextBlock Text="启用后在音乐播放界面显示音频频谱可视化效果" FontSize="12"  FontWeight="Normal"   Margin="20,5,0,0"/>
                </StackPanel>

                <!-- 右侧：开关控件 -->
                <ui:ToggleSwitch x:Name="SpectrumToggleSwitch" 
                          Grid.Column="1"    Background="Black"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          IsChecked="{Binding IsSpectrumEnabled, Mode=TwoWay}"
                          Content="{Binding IsSpectrumEnabledText, Mode=OneWay}"/>
            </Grid>
                <Separator  Margin="10" />
                <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：设置项描述 -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="AppIcon" Margin="2"/>
                        <Separator Margin="2" />
                        <TextBlock Text="程序托盘"   FontSize="14"  FontWeight="SemiBold"   />
                        <Separator Margin="2" />
                    </StackPanel>
                    <TextBlock Text="启用后点击关闭主窗口自动最小化到程序托盘" FontSize="12"  FontWeight="Normal"  Margin="20,5,0,0"/>
                </StackPanel>

                <!-- 右侧：开关控件 -->
                <ui:ToggleSwitch 
                     Grid.Column="1"   Background="Black"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     IsChecked="{Binding IsTrayEnabled, Mode=TwoWay}"
                      Content="{Binding IsTrayEnabledText, Mode=OneWay}"/>
            </Grid> 
        </StackPanel>
       
    </Grid>
    
</UserControl>