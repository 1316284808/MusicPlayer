<UserControl x:Class="MusicPlayer.Controls.HeartControl"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicPlayer.Controls"
              xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
             xmlns:Helper="clr-namespace:MusicPlayer.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid  >
        <Grid.RowDefinitions>

            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center"   Grid.Row="0" >
            <TextBlock  Text="音乐库" FontSize="24" FontWeight="Bold"  Margin="10"   />
        </StackPanel>



        <Grid Grid.Row="1" Height="150" Margin="15,10"  x:Name="DropArea" AllowDrop="True" 
              DragEnter="DropArea_DragEnter" DragOver="DropArea_DragOver" Drop="DropArea_Drop">

            <Rectangle Stroke="Black" StrokeThickness="1" StrokeDashArray="4 2"
      RadiusX="8" RadiusY="8" />
            <Border Background="#40FFFFFF"  CornerRadius="8">
            <StackPanel Orientation="Vertical"   VerticalAlignment="Center">


                    <ui:Button ToolTip="选择目录" Command="{Binding SelectDirectoryCommand}"
        HorizontalAlignment="Center"
        Width="auto" 
       Padding="5" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Helper:CustomIcon HorizontalAlignment="Left" Margin="5,2" Kind="NewFolder" />
                            <Separator Margin="2" />
                            <ui:TextBlock Text="选择目录"/>
                        </StackPanel>
                    </ui:Button>
                    <ui:TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.7"
Text="将文件夹拖到此处，将自动识别文件导入到默认列表"/>
            </StackPanel>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8E8E8" />
                                <Setter Property="BorderBrush" Value="#CCCCCC" />
                                <Setter Property="BorderThickness" Value=" 1,0" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

            </Border>
        </Grid>

        <Grid Grid.Row="2"  Margin="10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
               
                <ui:Button    ToolTip="新建歌单"  Command="{Binding CreatePlaylistCommand}"
   HorizontalAlignment="Left"
   Width="auto" 
  Padding="5" Margin="5"  >
                    <StackPanel Orientation="Horizontal">
                        <Helper:CustomIcon Kind="Add"  /> 
                        <Separator Margin="2" />
                        <ui:TextBlock Text="新建歌单"/>
                    </StackPanel>
                </ui:Button>

            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ui:ListView x:Name="PlaylistListBox"   Grid.Column="0"
                             ItemsSource="{Binding MusicGroups}" 
                             SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"
                             Background="Transparent" BorderThickness="0" AlternationCount="2"  
        
ScrollViewer.HorizontalScrollBarVisibility="Disabled"
ScrollViewer.VerticalScrollBarVisibility="Auto"
ScrollViewer.CanContentScroll="True"
VirtualizingStackPanel.IsVirtualizing="True"
VirtualizingStackPanel.VirtualizationMode="Recycling"
VirtualizingStackPanel.ScrollUnit="Pixel"
VirtualizingStackPanel.CacheLength="5,5"
VirtualizingStackPanel.CacheLengthUnit="Item"
SelectionMode="Single" >

                    <ui:ListView.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <!-- 优化虚拟化性能的设置 -->
                            <Setter Property="Padding" Value="5,10"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder" Margin="0,0,15,0" CornerRadius="8" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#80FFFFFF"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="False">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4DFFFFFF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ui:ListView.ItemContainerStyle>
                    <ui:ListView.ItemTemplate>
                        <DataTemplate >
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 歌单信息 -->
                                <StackPanel Grid.Column="1"  VerticalAlignment="Center">

                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12"     Opacity="0.7"   />

                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <ui:Button ToolTip="修改歌单信息" Command="{Binding DataContext.UpdatePlaylistCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}">
                                        <Helper:CustomIcon Kind="Update"/>
                                        <ui:Button.Style>
                                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Name}" Value="收藏列表">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:Button.Style>
                                    </ui:Button>
                                    <ui:Button ToolTip="删除歌单" Command="{Binding DataContext.DeletePlaylistCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}">
                                        <Helper:CustomIcon Kind="Delete" Foreground="Red"/>
                                        <ui:Button.Style>
                                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Name}" Value="收藏列表">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:Button.Style>
                                    </ui:Button>
                                </StackPanel>

                                <!-- 歌曲计数 -->
                                <StackPanel  Grid.Column="3"    Orientation="Horizontal" MinWidth="80" VerticalAlignment="Center"  >
                                    <ui:TextBlock Text="共" FontSize="14" VerticalAlignment="Center"  Opacity="0.7"/>
                                    <ui:TextBlock Text="{Binding SongCount}" FontSize="14" VerticalAlignment="Center"  Margin="2,0"/>
                                    <ui:TextBlock Text="首" FontSize="14" VerticalAlignment="Center" Opacity="0.7"/>
                                </StackPanel>


                                <StackPanel Grid.Column="0"   >
                                    <Grid>
                                        <!-- 播放按钮 点击则播放垓歌单里面的歌曲 要实现按钮的icon转换，参考：AlbumControl中专辑卡片的播放按钮实现-->
                                        <ui:Button   HorizontalAlignment="Center"   VerticalAlignment="Center" 
                                   CornerRadius="8"  Width="40" Height="40" Margin="5,0"
                                    Command="{Binding DataContext.PlayAlbumCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding Name}"  >
                                            <Helper:CustomIcon Width="16" Height="16">
                                                <Helper:CustomIcon.Style>
                                                    <Style TargetType="Helper:CustomIcon" BasedOn="{StaticResource {x:Type Helper:CustomIcon }}">
                                                        <!-- 默认显示播放图标 -->
                                                        <Setter Property="Kind" Value="Play"/>
                                                        <Style.Triggers>
                                                            <!-- 播放时显示暂停图标 -->
                                                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                                <Setter Property="Kind" Value="Pause"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Helper:CustomIcon.Style>
                                            </Helper:CustomIcon>
                                        </ui:Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>

                <Border Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 标题 -->
                       
                        
                        <!-- 统计卡片 -->
                        <UniformGrid Grid.Row="0" VerticalAlignment="Top" Columns="2" Rows="2" >
                            <!-- 总歌曲数 -->
                            <Border Background="#40FFFFFF"  Width="200" Height="120" CornerRadius="8" Margin="5" Padding="15">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Helper:CustomIcon Kind="List" IconSize="24" 
                                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding LibraryStatistics.TotalSongs}" 
                                               FontSize="28" FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="歌曲总数" FontSize="12" Opacity="0.8" 
                                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8E8E8" />
                                                <Setter Property="BorderBrush" Value="#CCCCCC" />
                                                <Setter Property="BorderThickness" Value=" 1,0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            
                            <!-- 总歌单数 -->
                            <Border Background="#40FFFFFF"  Width="200" Height="120" CornerRadius="8" Margin="5" Padding="15">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Helper:CustomIcon Kind="HeartFill" IconSize="24"  Foreground="Red"  
                                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding LibraryStatistics.TotalPlaylists}" 
                                               FontSize="28" FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="歌单总数" FontSize="12" Opacity="0.8" 
                                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8E8E8" />
                                                <Setter Property="BorderBrush" Value="#CCCCCC" />
                                                <Setter Property="BorderThickness" Value=" 1,0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            
                            <!-- 总歌手数 -->
                            <Border Background="#40FFFFFF"  Width="200" Height="120" CornerRadius="8" Margin="5" Padding="15">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Helper:CustomIcon Kind="Person" IconSize="24"  
                                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding LibraryStatistics.TotalArtists}" 
                                               FontSize="28" FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="歌手总数" FontSize="12" Opacity="0.8" 
                                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8E8E8" />
                                                <Setter Property="BorderBrush" Value="#CCCCCC" />
                                                <Setter Property="BorderThickness" Value=" 1,0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            
                            <!-- 总专辑数 -->
                            <Border Background="#40FFFFFF"  Width="200" Height="120" CornerRadius="8" Margin="5" Padding="15">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Helper:CustomIcon Kind="Album" IconSize="24"  
                                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding LibraryStatistics.TotalAlbums}" 
                                               FontSize="28" FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="专辑总数" FontSize="12" Opacity="0.8" 
                                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8E8E8" />
                                                <Setter Property="BorderBrush" Value="#CCCCCC" />
                                                <Setter Property="BorderThickness" Value=" 1,0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </UniformGrid>
                    </Grid>
                </Border>
            </Grid>
         


          
        </Grid>
    </Grid>


</UserControl>

