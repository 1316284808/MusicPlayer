<UserControl x:Class="MusicPlayer.Controls.WordByWordLyricItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="550">
  
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions> 
            <!--中文歌词显示-->
    <Grid Grid.Row="1" x:Name="CNGrid">
        <WrapPanel x:Name="BottomWrapPanel"  Background="Transparent"  VerticalAlignment="Top"/>
        <WrapPanel x:Name="TopWrapPanel"   Background="Transparent"  VerticalAlignment="Top"/>
    </Grid>
        <!--英文歌词显示-->
        <Grid Grid.Row="0" x:Name="ENGrid">
            <WrapPanel x:Name="BottomWrapPanel1"  Background="Transparent"  VerticalAlignment="Top"/>
            <WrapPanel x:Name="TopWrapPanel1"   Background="Transparent"  VerticalAlignment="Top"/>
        </Grid>
        
    </Grid> 
</UserControl>