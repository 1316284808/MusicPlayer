<ui:FluentWindow x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        xmlns:controls="clr-namespace:MusicPlayer.Controls"
        xmlns:Navigation="clr-namespace:MusicPlayer.Navigation"
        xmlns:converters="clr-namespace:MusicPlayer.Converters"
        xmlns:config="clr-namespace:MusicPlayer.Config"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        Title="MusicPlayer"
        Width=" 1080"
        Height="720" 
        ResizeMode="NoResize"
        WindowBackdropType="Auto"
        WindowCornerPreference="Round"
        ExtendsContentIntoTitleBar="True"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"> 
    <Border Background="Transparent" >
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="Black" Opacity="0.2"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <!--内容 -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <!--标题栏 -->
                    <RowDefinition Height="Auto" MinHeight="40"/>
                    <!--内容 -->
                    <RowDefinition Height="*"/>
                    <!--控制栏 -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 背景层（最底层） -->
                <!--<controls:BackgroundControl x:Name="BackgroundControl" Grid.RowSpan="3"/>-->

                <!-- 主内容区域 - 使用Frame进行页面导航 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="60" MaxWidth="250"/> 
                        <!-- 分割条列 -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左侧设置栏 -->
                    <controls:SettingsBarControl x:Name="SettingsBarControl"
                                 Grid.Column="0"
                                 MinWidth="60"
                                 MaxWidth="250"  />

                    <!-- 可拖动的分割条 -->
                    <!--<GridSplitter Grid.Column="1"
                  Width="5"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Background="Transparent"
                  ResizeBehavior="PreviousAndNext"
                  ResizeDirection="Columns"
                  Cursor="SizeWE"/>-->

                    <!-- 主内容区域 -->
                    
                        <Navigation:AnimatedFrame x:Name="MainFrame" Grid.Column="1"  NavigationUIVisibility="Hidden"/>

                    <ui:SnackbarPresenter x:Name="MainSnackbarPresenter"  MinWidth="400" Grid.Column="1"
                                          HorizontalAlignment="Right"  
                                          VerticalAlignment="Bottom"/>
                    
                </Grid>


                <!-- 控制栏 -->
                <controls:ControlBarControl x:Name="ControlBarControl" Grid.Row="2"  />

                <!-- 标题栏（最顶层，确保可交互） -->
                <controls:TitleBarControl x:Name="TitleBarControl" Grid.Row="0"   />
                <!-- Snackbar 通知控件 -->
               
            </Grid>
          

            <!-- ContentDialog 宿主控件 -->
            <ContentPresenter x:Name="RootContentDialog" Grid.Row="0"/>

        </Grid>
    </Border>

</ui:FluentWindow>